<p id="notice"><%= notice %></p>

<h1>Listing Church Services</h1>

<table>
  <thead>
    <tr>
      <th>Weekday</th>
      <th>Schedule</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @church_services.each do |church_service| %>
      <tr>
        <td><%= church_service.weekday %></td>
        <td><%= church_service.schedule %></td>
        <td><%= church_service.name %></td>
        <td><%= link_to 'Show', church_service %></td>
        <td><%= link_to 'Edit', edit_church_service_path(church_service) %></td>
        <td><%= link_to 'Destroy', church_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

